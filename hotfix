#!/bin/sh
if [ $# != 0 ];then
	echo "fatal: usage( hotfix ) no args"
	exit 1
fi

if [ ! -e alps ];then
	echo "Error exec path!!!"
	exit 1
fi

echo "------->begin"

root=$PWD
cd alps/system/vold/
branch=`git branch | awk '{if(match($1,"*")){print $2}}'`
cd - >/dev/null

echo "------->On branch $branch"
#`repo status >repo.txt` 
project=`awk  '{if(match($1,"project")){print $2}}' repo.txt`
if [ ! -z "$project" ];then
	if [ ! -e $root/PATCH/$branch ];then
		mkdir -p $root/PATCH/$branch
	fi
	
	for i in $project
	do
		if [ ! -z ${i##*/}  ];then
			i=${i%/*}/
		fi
		cd $i
		subfiles=`git status -s | awk '{print $NF}'`
		for j in $subfiles
		do
			target=$i$j
			target=${target#*/}
			dir=${target%/*}
			if [ ! -e  $root/PATCH/$branch/$dir ];then
				mkdir -p $root/PATCH/$branch/$dir
			fi

			if [ -f  $j ];then
				cp -rfp $j $root/PATCH/$branch/$target
				echo "out------->PATCH/$branch/$target"
			elif [ -d  $j ];then
				echo "out------->PATCH/$branch/$target"
				target=${target%/*}
				target=${target%/*}
				cp  -rfp $j $root/PATCH/$branch/$target
			else
				if [ -e $root/PATCH/$branch/$target ];then
					rm $root/PATCH/$branch/$target
					echo "delete------->PATCH/$branch/$target"
				fi
			fi
		done
		
		cd $root
	done
	echo "------->finish"
	echo "自动提交?(y/n)"
	read CMD
	if [ "$CMD" = "y" ];then
		echo "备注内容:"
		read CONTENT
		echo ----------------------------------------------------$(date +%Y-%m-%d-%H) begin ------------------------------------------------->>$root/PATCH/$branch/log.txt
		for i in $project
		do
			if [ ! -z ${i##*/}  ];then
				i=${i%/*}/
			fi
			cd $i
			echo "Project $i"
			echo -------------------------in project $i >>$root/PATCH/$branch/log.txt
			git diff >>$root/PATCH/$branch/log.txt
			git add .
			git commit -am "$CONTENT"
			cd $root
		done
		echo ----------------------------------------------------$(date +%Y-%m-%d-%H) end ------------------------------------------------->>$root/PATCH/$branch/log.txt
	else
		exit 1
	fi
else
	echo "nothing to commit (working directory clean)"
fi
